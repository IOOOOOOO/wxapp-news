.wxParse-p .wxParse-img{
  text-indent: -2em !important;
}

.fixed-bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-top: 1px solid #eee;
  display: flex;
}
.fixed-bottom .item{
  flex: 1;
  font-size: 14px;
  text-align: center;
  line-height: 40px;
  position: relative;
  border: 0 none;
  background: none;
  border-radius: 0;
}
.fixed-bottom .item:after{
  display: none;
  border:none;
  border-radius: 0;
}
